{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true,
		"ignore": [
			".next",
			".vercel",
			"node_modules",
			".env.local",
			".env.example",
			"bun.lockb",
			"README.md",
			"next-env.d.ts"
		]
	},
	"formatter": {
		"ignore": [
			".next",
			".vercel",
			"node_modules",
			".env.local",
			".env.example",
			"bun.lockb",
			"README.md",
			"next-env.d.ts"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useValidAnchor": "off"
			}
		},
		"ignore": [
			".next",
			".vercel",
			"node_modules",
			".env.local",
			".env.example",
			"bun.lockb",
			"README.md",
			"next-env.d.ts"
		]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"arrowParentheses": "asNeeded",
			"trailingComma": "none"
		}
	}
}
